<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="actor1" class="com.stackroute.domain.Actor">
        <constructor-arg index="0" value="Ranveer Singh"> </constructor-arg>
        <constructor-arg index="1" value="male"> </constructor-arg>
        <constructor-arg index="2" value="33"></constructor-arg>
    </bean>

    <bean id="actor2" class="com.stackroute.domain.Actor">
        <constructor-arg index="0" value="Deepika Padukone"> </constructor-arg>
        <constructor-arg index="1" value="female"> </constructor-arg>
        <constructor-arg index="2" value="32"></constructor-arg>
    </bean>


    <bean id="movie1" autowire="byName" class="com.stackroute.domain.Movie" >
        <constructor-arg index="0" ref="actor1" ></constructor-arg>
    </bean>

    <bean id="movie2" autowire="byName" class="com.stackroute.domain.Movie" >
        <constructor-arg index="0" ref="actor2" ></constructor-arg>
    </bean>

</beans>